{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "dockerfile": {
    "enabled": true,
    "fileMatch": ["(^|/)Dockerfile$", "spec/integrations/Dockerfile"]
  },
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "rangeStrategy": "bump",
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "minimumReleaseAge": "3 days"
    }
  ]
}
