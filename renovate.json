{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "Gemfile.lint",
    "karafka-web.gemspec",
    "package.json",
    ".github/workflows/**",
    "docker-compose*.yml"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "dockerfile": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)Dockerfile$/",
      "/spec/integrations/Dockerfile/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "*"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "7 days"
}
