{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "dockerfile": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)Dockerfile$/",
      "/spec/integrations/Dockerfile/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["*"],
      "minimumReleaseAge": "7 days"
    }
  ]
}
