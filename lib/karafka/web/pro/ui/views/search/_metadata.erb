<div class="row mb-3 collapse collapsed" id="search-metadata-details">
  <div class="col-sm-12">
    <div class="row">
      <div class="table-responsive">
        <table class="table table-bordered bg-white table-hover table-striped">
          <thead>
            <tr>
              <th colspan="2">Summary</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Total Messages Checked</td>
              <td><%= @search_details[:totals][:checked] %></td>
            </tr>
            <tr>
              <td>Matches</td>
              <td><%= @search_details[:totals][:matched] %></td>
            </tr>
            <tr>
              <td>Search Time</td>
              <td><%= (@search_details[:totals][:time_taken] / 1000).round(1) %> second</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered bg-white table-hover table-striped">
          <thead>
            <tr>
              <th>Partition</th>
              <th>Messages Checked</th>
              <th>First Offset</th>
              <th>Last Offset</th>
              <th>Matches</th>
            </tr>
          </thead>
          <tbody>
            <% @search_details[:partitions].each do |k, v| %>
              <tr>
                <td>Partition <%= k %></td>
                <td><%= v[:checked] %></td>
                <td><%= v[:first_offset] %></td>
                <td><%= v[:last_offset] %></td>
                <td><%= v[:matched] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
