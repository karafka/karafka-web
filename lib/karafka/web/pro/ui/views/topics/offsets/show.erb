<% view_title "#{@topic.topic_name} Offsets" %>

<%== partial 'topics/topics/tabs' %>

<div class="data-table-wrapper">
  <table class="data-table">
    <thead>
      <tr>
        <th><%== sort_link(:partition_id) %></th>
        <th><%== sort_link(:low) %></th>
        <th><%== sort_link(:high) %></th>
        <th><%== sort_link('Count', :diff) %></th>
      </tr>
    </thead>
    <tbody>
      <%==
        each_partial(
          @offsets,
          'topics/offsets/partition'
        )
      %>
    </tbody>
  </table>
</div>
