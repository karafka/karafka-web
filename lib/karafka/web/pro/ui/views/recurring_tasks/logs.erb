<% view_title 'Logs' %>

<%== partial 'recurring_tasks/tabs' %>

<div class="data-table-wrapper">
  <table class="data-table">
    <thead>
      <tr>
        <th>Task ID</th>
        <th>Result</th>
        <th>Time Taken</th>
        <th>Dispatched At</th>
        <th>Schedule Version</th>
      </tr>
    </thead>
    <tbody>
      <%==
        render_each(
          @logs,
          'recurring_tasks/_log',
          local: :log
        )
      %>
    </tbody>
  </table>
</div>
