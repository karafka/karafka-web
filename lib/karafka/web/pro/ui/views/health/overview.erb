<% view_title 'Consumers Groups Overview' %>

<%== partial 'health/tabs' %>

<div class="col-span-12">
  <% if @stats.empty? %>
    <%== partial 'health/no_data' %>
  <% end %>

  <% @stats.each_with_index do |(cg_name, cg_details), index| %>
    <h2 class="h2"><%= cg_name %></h2>

    <% topics = cg_details[:topics] %>
    <% topics.each_with_index do |(topic_name, topic_details), index| %>
      <div class="data-table-wrapper">
        <table class="data-table">
          <thead>
            <tr>
              <th colspan="7">
                <%= topic_name %>
              </th>
              <th colspan="1" rowspan="1" class="options">
                Options
              </th>
            </tr>
            <tr>
              <th colspan="1" rowspan="2">
                <%== sort_link('Partition', :id) %>
              </th>
              <th colspan="1" rowspan="2">
                <%== sort_link(:lag_hybrid) %>
              </th>
              <th colspan="1" rowspan="2">
                <%== sort_link(:stored_offset) %>
              </th>
              <th colspan="3" rowspan="1">
                States
              </th>
              <th colspan="1" rowspan="2">
               <%== sort_link('Process ID', :id) %>
              </th>
              <th colspan="1" rowspan="2" class="options">
                <%==
                  partial(
                    'health/topic_edit_options',
                    locals: {
                      consumer_group_name: cg_name,
                      topic_name: topic_name,
                      topic_details: topic_details
                    }
                  )
                %>
              </th>
            </tr>
            <tr>
              <th><%== sort_link(:fetch_state) %></th>
              <th><%== sort_link(:poll_state) %></th>
              <th><%== sort_link(:lso_risk_state) %></th>
            </tr>
          </thead>
          <tbody>
              <%==
                partial(
                  'health/partitions_with_fallback',
                  locals: {
                    consumer_group_id: cg_name,
                    topic_details: topic_details,
                    topic_name: topic_name,
                    partition_partial: 'health/partition',
                    colspan: 7
                  }
                )
              %>
          </tbody>
        </table>

        <%== partial 'health/table_metadata', locals: { details: cg_details } %>
      </div>
    <% end %>
  <% end %>
</div>
