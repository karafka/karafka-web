<%
  feature_class = features.commanding? ? '' : 'btn-disabled'

  partitions = topic_details[:partitions]

  # Only show buttons if we have partition data
  if partitions.any?
    # Check if any partition is paused (for showing Resume All button)
    has_paused = partitions.values.any? { |p| p.poll_state != 'active' }

    pause_path = consumers_path(
      'topics',
      consumer_group_name,
      topic_name,
      'pause',
      'new'
    )

    resume_path = consumers_path(
      'topics',
      consumer_group_name,
      topic_name,
      'pause',
      'edit'
    )
%>

<div class="inline-flex gap-2">
  <% if has_paused %>
    <a
      href="<%= resume_path %>"
      class="btn btn-success btn-sm <%= feature_class %>"
      title="Resume all paused partitions of this topic within the '<%= consumer_group_name %>' consumer group"
    >
      <%== icon(:play) %>
      Resume All
    </a>
  <% end %>

  <a
    href="<%= pause_path %>"
    class="btn btn-warning btn-sm <%= feature_class %>"
    title="Pause all partitions of this topic within the '<%= consumer_group_name %>' consumer group"
  >
    <%== icon(:pause) %>
    Pause All
  </a>
</div>

<% end %>
