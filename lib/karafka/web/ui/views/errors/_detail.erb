<% if v.is_a?(Hash) %>
  <% v.each do |k2, v2| %>
    <tr>
      <td>
        <%= "#{k}.#{k2}" %>
      </td>
      <td>
        <% if %w[sasl ssl].any? { |scope| k2.to_s.include?(scope) } %>
          ***
        <% elsif k2.to_s == 'tags' %>
          <%== tags(v2) %>
        <% else %>
          <%= v2 %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td>
      <%= k %>
    </td>
    <td>
      <% case k
         when :occurred_at
      %>
        <%== relative_time v %>
      <% when :error_class %>
        <code><%= v %></code>
      <% when :type %>
        <span class="badge bg-secondary">
          <%= v %>
        </span>
      <% else %>
        <%= v %>
      <% end %>
    </td>
  </tr>
<% end %>
