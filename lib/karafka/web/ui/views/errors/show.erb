<%==
  type = @error_message.payload[:type]
  error_class = @error_message.payload[:error_class]

  view_title("#{type}: #{error_class}")
%>

<div class="container">
  <div class="row mb-4">
    <div class="col-sm-12">
      <h5 class="mb-2">
        Metadata
      </h5>
      <hr/>
    </div>
  </div>

