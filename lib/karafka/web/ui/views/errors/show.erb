    <div class="col-sm-12 table-responsive">
      <table class="processes bg-white table table-hover table-bordered table-striped mb-0 align-middle">
        <tbody>
          <% @error_message.payload.each do |k, v| %>
            <% next if k == :backtrace %>
            <%==
              partial(
                'errors/detail',
                locals: {
                  k: k,
                  v: v
                }
              )
            %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

