<li>
  <a href="<%= root_path('errors') %>">
    Errors
  </a>
</li>

<% if @error_message %>
  <li>
    <a href="<%= root_path('errors', @offset) %>">
      <%=
        type = @error_message.payload[:type]
        error_class = @error_message.payload[:error_class]

        "#{type}: #{error_class}"
      %>
    </a>
  </li>
<% end %>
