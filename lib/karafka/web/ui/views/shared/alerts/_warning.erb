<div class="alert alert-warning" role="alert">
  <%== icon :exclamation_triangle  %>
  <span>
    <%== message %>
  </span>

  <% allow_close ||= false %>

  <% if allow_close %>
    <button type="button" class="close-alert" title="Close this warning notice">
      <%== icon :x_mark  %>
    </button>
  <% end %>
</div>
