<%
  title = [@topic.consumer_group.name, @topic.subscription_group, @topic.name].join(': ')
  view_title title
%>

<div class="data-table-wrapper">
  <table class="data-table">
    <tbody>
      <% flat_hash(@topic.to_h).each do |k, v| %>
        <%==
          partial(
            'routing/detail',
            locals: {
              k: k,
              v: v
            }
          )
        %>
      <% end %>
    </tbody>
  </table>
</div>
