<div id="summary" class="container text-center mb-5">
  <div class="row">

    <div class="col-lg-2 offset-md-1">
      <div class="card mb-0">
        <div class="card-body">
          <p class="card-text">
            <div class="stat mb-1">
              <%= @counters.processes %>
            </div>
            <div class="desc">
              Processes
            </div>
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-2">
      <div class="card mb-0">
        <div class="card-body">
          <p class="card-text">
            <div class="stat mb-1">
              <%= @counters.workers %>
            </div>
            <div class="desc">
              Workers
            </div>
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-2">
      <div class="card mb-0">
        <div class="card-body">
          <p class="card-text">
            <div class="stat mb-1">
              <%= @counters.listeners %>
            </div>
            <div class="desc">
              Listeners
            </div>
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-2">
      <div class="card mb-0">
        <div class="card-body">
          <p class="card-text">
            <div class="stat mb-1">
              <%= @counters.utilization.round(2) %>
              %
            </div>
            <div class="desc">
              Utilization
            </div>
          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-2">
      <div class="card mb-0">
        <div class="card-body">
          <p class="card-text">
            <div class="stat mb-1">
              <%= format_memory @counters.rss %>
            </div>
            <div class="desc">
              RSS
            </div>
          </p>
        </div>
      </div>
    </div>

  </div>
</div>
