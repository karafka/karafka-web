<tr>
  <td>
    <%= subscription_group %>
  </td>
  <td>
    <%= topic.name %>
  </td>
  <td>
    <span class="badge bg-secondary">
      <%= topic.patterns.type %>
    </span>

    <% if subscription_group.multiplexing? %>
      <span class="badge bg-secondary">
        multiplexing
        <%= subscription_group.multiplexing.min %>
        -
        <%= subscription_group.multiplexing.max %>
      </span>
    <% end %>
  </td>
  <td>
    <span class="badge bg-<%= topic.active? ? 'success' : 'warning text-dark' %>">
    <%= topic.active? %>
    </span>
  </td>
  <td class="text-center">
    <a href="<%= root_path('routing', topic.id) %>" class="btn btn-sm btn-secondary text-white">
      Details
    </a>
  </td>
</tr>
