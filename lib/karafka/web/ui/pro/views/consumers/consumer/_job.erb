<tr>
  <td>
    <code><%= job.consumer %></code>

    <% job.tags.each do |tag| %>
      <span class="badge bg-info"><%= tag %></span>
    <% end %>
  </td>
  <td>
    <span class="badge bg-secondary badge-topic" title="Consumer group: <%= job.consumer_group %>">
      <%= job.topic %>:
      <%= job.partition %>
    </span>
  </td>
  <td>
    <code>#<%= job.type %></code>
  </td>
  <td>
    <%== offset_with_label job.first_offset %>
  </td>
  <td>
    <%== offset_with_label job.last_offset %>
  </td>
  <td>
    <%== offset_with_label job.committed_offset %>
  </td>
  <td>
    <%== relative_time job.started_at %>
  </td>
</tr>
